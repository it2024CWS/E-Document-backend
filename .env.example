# Server Configuration
PORT=8080

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourAppName
DB_NAME=your_database_name

# Admin User Configuration (for seeding)
ADMIN_NAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=password

# Logger Configuration
# Levels: debug, info, warn, error
LOG_LEVEL=info
# Pretty: true for development (colorful), false for production (JSON)
LOG_PRETTY=true

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=edocument-files
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=http://localhost:9000
